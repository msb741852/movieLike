<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.movielike.app.dao.movieMapper">
<!-- 키워드 찾기 무비 리스트 출력 -->
    <select id="selectKeyword" parameterType="movieDto" resultType="movieDto">
        select * from movies
            where true
            <if test="ottName != '' and ottName != null">
                and ottName
<!--                    in <foreach item="item" index="index" collection="ottName.split(',')" open="(" separator="," close=")"> '${item}'</foreach>-->
                        REGEXP #{ottName}

            </if>
            <if test="genrName != '' and genrName != null">
                and genrName
<!--                in <foreach item="item" index="index" collection="genrName.split(',')" open="(" separator="," close=")"> '${item}'</foreach>-->
                REGEXP #{genrName}

            </if>
            <if test="movScoreCount != '' and movScoreCount != null">
                and movScoreCount >= #{movScoreCount}
            </if>
            <if test="movScore != '' and movScore != null">
                and movScore >= #{movScore}
            </if>
    </select>
</mapper>



















